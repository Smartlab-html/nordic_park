mixin top-nav() 
	// start top-nav
	+b.top-nav.block-with-lazy
		+e.logo.animate__fadeIn.animate__animated(href="/")
			img(src="img/svg/logo.svg", alt="")
		+e.menu
			+e.menu-item--special.animate__bounceInLeft.animate__animated(href="#") Выбрать дом
			+e.menu-item.animate__bounceInLeft.animate__animated(href="#") Расположение
			+e.menu-item.animate__bounceInLeft.animate__animated(href="#") Генплан
		+b.menu-mobile--js
			+e.wrap
				+e.item(href="#") Дома
				+e.item(href="#") Генплан
				+e.item(href="#") Расположение
				+e.item(href="#") Контакты
		+e.wrap
			+e.tel.animate__bounceInRight.animate__animated(href="tel:+79851405500") +7 985 140-55-00
			+menu-toggle
	// end top-nav